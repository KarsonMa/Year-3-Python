#While loop challenge1 (gcsecs.com)password = ""
while password != "kebab":
 password = input('Please enter a password: ')
print ("correct password accepted")

#While loop challenge2 (gcsecs.com)
answer = "N"
while answer != "Y":
 print("Are we there yet?")
 answer = str(input("Please respond, y or n: ").upper())
print("Yay! We are there!!")

#While loop challenge3 (gcsecs.com)
StayInLoop = 1
while StayInLoop != 2:
 print("Press 1 for  choice or 2 to exit")
 StayInLoop = int(input("Please respond, 1 or 2: "))
print("Exited")

#While loop challenge4 (gcsecs.com)
loopCount = 1
while loopCount < 11:
 print("Loop", loopCount)
 loopCount = loopCount + 1
print("End")

#While loop challenge5 (gcsecs.com)
username = ""
while not username:
    username = str(input("Enter username: "))
print("your username",username, "is accepted")

#While loop challenge6 (gcsecs.com)
import random

number=random.randint(1,10)
guess=int(input("Guess the number between 1-10: "))

while guess!=number:
 if number < guess:
    guess=int(input("Guess too High, try again: "))
 else:
    guess=int(input("Guess too Low, try again: "))

print("Yay! You got it correct!!!")

